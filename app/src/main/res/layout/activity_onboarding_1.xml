<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/gradient_background"> <!-- Ganti dengan nama Activity Anda -->

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:layout_marginTop="100dp" />

    <ImageView
        android:id="@+id/iv_splash_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_spendly_2"
        android:contentDescription="Spendly App Logo"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_splash_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spendly"
        android:textColor="#5468B1"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_splash_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="spend your money wisely with spendly"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />


</LinearLayout>