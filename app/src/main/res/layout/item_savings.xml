<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Savings Image -->
        <ImageView
            android:id="@+id/img_savings"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/placeholder_green"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="8dp" />

        <!-- Content Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Header with Name and Remove Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_savings_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lamborghini Veneno"
                    android:textSize="16sp"
                    android:textColor="#1F2937"
                    android:fontFamily="sans-serif-bold"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/btn_remove" />

                <ImageView
                    android:id="@+id/btn_remove"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_close"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    app:tint="#9CA3AF" />

            </RelativeLayout>

            <!-- Amount Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_current_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp2.150.000"
                    android:textSize="14sp"
                    android:textColor="#059669"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:textSize="14sp"
                    android:textColor="#6B7280" />

                <TextView
                    android:id="@+id/tv_target_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp60.000.000.000"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- âœ… PROGRESS BAR - Dynamic Update -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:max="100"
                    android:progress="4"
                    android:progressTint="#059669"
                    android:progressBackgroundTint="#E5E7EB"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_progress_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.6%"
                    android:textSize="12sp"
                    android:textColor="#059669"
                    android:fontFamily="sans-serif-bold"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/progress_bar"
                    android:layout_marginTop="4dp" />

            </RelativeLayout>

            <!-- Days Remaining -->
            <TextView
                android:id="@+id/tv_days_remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="520 days left"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:drawableStart="@drawable/ic_calendar_small"
                android:drawablePadding="4dp"
                app:drawableTint="#6B7280" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>