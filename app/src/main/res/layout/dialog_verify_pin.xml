<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify PIN"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your PIN to complete the transaction"
        android:textSize="14sp"
        android:textColor="@color/text_gray"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- PIN Dots Indicator -->
    <LinearLayout
        android:id="@+id/pin_dots_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/pin_dot_1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/pin_dot_2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/pin_dot_3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/pin_dot_4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/pin_dot_5"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/pin_dot_empty" />

        <View
            android:id="@+id/pin_dot_6"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/pin_dot_empty" />

    </LinearLayout>

    <!-- Number Pad -->
    <LinearLayout
        android:id="@+id/number_pad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/pin_dots_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row 1: 1, 2, 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/btn_1"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="12dp"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/pin_number_background"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_2"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="12dp"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/pin_number_background"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_3"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:text="3"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/pin_number_background"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Row 2: 4, 5, 6 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/btn_4"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="12dp"
                android:text="4"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/pin_number_background"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_5"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="12dp"
                android:text="5"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/pin_number_background"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_6"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:text="6"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/pin_number_background"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Row 3: 7, 8, 9 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/btn_7"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="12dp"
                android:text="7"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/pin_number_background"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_8"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="12dp"
                android:text="8"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/pin_number_background"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_9"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:text="9"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/pin_number_background"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Row 4: Cancel, 0, Delete -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btn_cancel"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_close"
                android:padding="16dp"
                android:background="@drawable/pin_delete_background"
                android:clickable="true"
                android:focusable="true"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/btn_0"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="12dp"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/pin_number_background"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_backspace"
                android:padding="16dp"
                android:background="@drawable/pin_delete_background"
                android:clickable="true"
                android:focusable="true"
                app:tint="@color/white" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
