<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.SetPinCodeActivity">

    <!-- Header with back button and title -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Set PIN Code"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center" />

        <!-- Empty view to balance the layout -->
        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <!-- PIN Setup Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toTopOf="@id/btn_set"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_pin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set a PIN Code"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_pin_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You'll need this PIN to access the app"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:gravity="center"
            android:layout_marginBottom="48dp" />

        <!-- PIN Dots Indicator -->
        <LinearLayout
            android:id="@+id/pin_dots_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="48dp">

            <View
                android:id="@+id/pin_dot_1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/pin_dot_empty" />

            <View
                android:id="@+id/pin_dot_2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/pin_dot_empty" />

            <View
                android:id="@+id/pin_dot_3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/pin_dot_empty" />

            <View
                android:id="@+id/pin_dot_4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/pin_dot_empty" />

            <View
                android:id="@+id/pin_dot_5"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/pin_dot_empty" />

            <View
                android:id="@+id/pin_dot_6"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/pin_dot_empty" />

        </LinearLayout>

        <!-- Number Pad -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Row 1: 1, 2, 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/btn_1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="20dp"
                    android:text="1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@drawable/pin_number_background"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btn_2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="20dp"
                    android:text="2"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/pin_number_filled_background"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btn_3"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="3"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@drawable/pin_number_background"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Row 2: 4, 5, 6 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/btn_4"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="20dp"
                    android:text="4"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@drawable/pin_number_background"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btn_5"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="20dp"
                    android:text="5"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/pin_number_filled_background"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btn_6"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="6"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/pin_number_filled_background"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Row 3: 7, 8, 9 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/btn_7"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="20dp"
                    android:text="7"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/pin_number_filled_background"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btn_8"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="20dp"
                    android:text="8"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@drawable/pin_number_background"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btn_9"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="9"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@drawable/pin_number_background"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Row 4: Delete, 0, Fingerprint -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_delete"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_backspace"
                    android:padding="20dp"
                    android:background="@drawable/pin_delete_background"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/btn_0"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="20dp"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/pin_number_filled_background"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageView
                    android:id="@+id/btn_fingerprint"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_fingerprint"
                    android:padding="20dp"
                    android:background="@drawable/pin_delete_background"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Set Button (Fixed at bottom) -->
    <Button
        android:id="@+id/btn_set"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="Set"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/button_primary_background"
        android:enabled="false"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>